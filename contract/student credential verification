pragma solidity ^0.8.0;

contract StudentCredentialVerification {

    struct Student {
        string name;
        string rollNumber;
        string course;
        uint256 graduationYear;
    }

    mapping(string => Student) public students; // maps roll number to student data
    address public owner;

    modifier onlyOwner() {
        require(msg.sender == owner, "You are not the owner");
        _;
    }

    constructor() {
        owner = msg.sender; // Set the contract deployer as the owner
    }

    // Function to add student credentials
    function addStudent(
        string memory _rollNumber,
        string memory _name,
        string memory _course,
        uint256 _graduationYear
    ) public onlyOwner {
        students[_rollNumber] = Student(_name, _rollNumber, _course, _graduationYear);
    }

    // Function to verify student by roll number
    function verifyStudent(string memory _rollNumber) public view returns (bool) {
        return bytes(students[_rollNumber].name).length > 0;
    }

    // Function to get student info
    function getStudentInfo(string memory _rollNumber) public view returns (string memory, string memory, uint256) {
        Student memory student = students[_rollNumber];
        require(bytes(student.name).length > 0, "Student not found");
        return (student.name, student.course, student.graduationYear);
    }
}
